{
  "apps": [
    {
      "name": "codecrack-api",
      "script": "./dist/server/node-build.mjs",
      "cwd": "/var/www/codecrack",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3002
      },
      "env_file": "/var/www/codecrack/.env.production",
      "log_file": "/var/log/codecrack/combined.log",
      "out_file": "/var/log/codecrack/out.log",
      "error_file": "/var/log/codecrack/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=1024",
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "temp"
      ],
      "source_map_support": true,
      "instance_var": "INSTANCE_ID"
    }
  ]
}
