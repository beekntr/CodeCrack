# =================================
# CodeCrack Production Configuration
# =================================

# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://orbittrails.com

# Database Configuration
MONGODB_URI=mongodb://codecrack_admin:${MONGO_ROOT_PASSWORD}@localhost:27017/codecrack?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
USE_QUEUE=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET}

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CALLBACK_URL=https://api.orbittrails.com/api/auth/google/callback

# Security Configuration
BCRYPT_ROUNDS=12

# Code Execution Configuration
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=256
TEMP_DIR=/tmp/codecrack

# Rate Limiting Configuration
API_RATE_LIMIT=200
AUTH_RATE_LIMIT=10
SUBMISSION_RATE_LIMIT=20

# Admin Configuration
ADMIN_EMAIL=${ADMIN_EMAIL}
ADMIN_PASSWORD=${ADMIN_PASSWORD}

# Server specific
SERVER_HOST=api.orbittrails.com
SSL_CERT_PATH=/etc/letsencrypt/live/api.orbittrails.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/api.orbittrails.com/privkey.pem
