# =================================
# CodeCrack Backend Configuration
# =================================

# Server Configuration
NODE_ENV=development
PORT=8080
CLIENT_URL=http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codecrack
# For production with auth: mongodb://codecrack:your_secure_password@localhost:27017/codecrack

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8080/api/auth/google/callback

# Security Configuration
BCRYPT_ROUNDS=12

# Code Execution Configuration
CODE_EXECUTION_TIMEOUT=5000
CODE_EXECUTION_MEMORY_LIMIT=128
TEMP_DIR=./temp

# Rate Limiting Configuration
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=5
SUBMISSION_RATE_LIMIT=10

# Admin Configuration
ADMIN_EMAIL=admin@codecrack.com
ADMIN_PASSWORD=change_this_secure_password

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Logging Configuration
LOG_LEVEL=info

# Email Configuration (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Production Configurations (commented out for development)
# CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codecrack
# REDIS_URL=redis://username:password@redis-host:6379
